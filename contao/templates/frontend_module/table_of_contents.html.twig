{# {% extends "@Contao/frontend_module/_base.html.twig" %} #}

{% block toc %}
  {% set attributes = attrs()
      .setIfExists('id', element_html_id)
      .addClass([element_css_classes, "module-#{type|replace({'_': '-'})}"])
      .mergeWith(attributes|default)
  %}

  <{% block wrapper_tag %}div{% endblock %}{% block attributes %}{{ attributes }}{% endblock %}>

    <div class="toc__title">{{ toc_headline }}</div>
    <nav id="toc" class="toc__nav" aria-label="Table of Contents">
      {# <input type="checkbox" id="toc-checkbox"> #}
    </nav>
    <script>
      toc("{{ selectorType }}", "{{ articleSelector }}", "{{ headingSelector }}");
    </script>
  </{{ block('wrapper_tag') }}>
{% endblock %}