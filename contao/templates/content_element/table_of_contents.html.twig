{% extends "@Contao/content_element/_base.html.twig" %}

{% block inner %}  
  {% if as_editor_view %}
    <p><strong>{{ toc_headline }}</strong></p>
    <p>{{ selectorType }}="{{ articleSelector }}" -> <strong>{{ headingSelector }}</strong></p>
  {% else %}
    <div class="toc__title">{{ toc_headline }}</div>
    <nav id="toc" class="toc__nav" aria-label="Table of Contents">
      {# <input type="checkbox" id="toc-checkbox"> #}
    </nav>
    <script>
      toc("{{ selectorType }}", "{{ articleSelector }}", "{{ headingSelector }}");
    </script>
  {% endif %}
{% endblock %}